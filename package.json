{
  "name": "taq-github-bot",
  "version": "1.1.1",
  "description": "Taqtile's Github bot",
  "author": "Taqtile",
  "license": "ISC",
  "repository": "https://github.com/taqtile/taq-github-bot.git",
  "homepage": "https://github.com/taqtile/taq-github-bot",
  "bugs": "https://github.com/taqtile/taq-github-bot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "yarn lint && tsc -p tsconfig.json",
    "clean-dist": "rimraf ./dist",
    "copy-resources": "copyup 'src/**/*.{html,jpg,jpeg,png,css,json,wsdl,md}' 'dist/'",
    "start": "probot run ./dist/index.js",
    "dev": "nodemon -e ts --ignore dist/ --exec \"yarn build && npm run start\"",
    "lint": "tslint 'src/**/*.ts' --project ./tsconfig.json",
    "postinstall": "yarn run clean-dist && yarn build && yarn run copy-resources",
    "reinstall": "rimraf ./node_modules || true && yarn cache clean && yarn",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "simulate:installation": "./node_modules/.bin/probot receive -e installation -p ./src/__test__/webhook-simulations/installation.payload.json -t any ./dist/index.js",
    "simulate:comment-finish": "./node_modules/.bin/probot receive -e issue_comment -p ./src/__test__/webhook-simulations/comment-finish.payload.json -t any ./dist/index.js"
  },
  "dependencies": {
    "dotenv": "6.0.0",
    "ioredis": "4.14.0",
    "lodash": "4.17.15",
    "module-alias": "2.2.1",
    "probot": "7.5.1",
    "reflect-metadata": "0.1.13",
    "typedi": "0.8.0"
  },
  "devDependencies": {
    "@types/bunyan": "1.8.6",
    "@types/faker": "4.1.5",
    "@types/ioredis": "4.0.13",
    "@types/jest": "24.0.17",
    "@types/lodash": "4.14.136",
    "@types/nock": "9.3.1",
    "@types/node": "10.14.15",
    "copyfiles": "2.1.0",
    "faker": "4.1.0",
    "jest": "24.8.0",
    "nock": "10.0.6",
    "nodemon": "1.18.10",
    "rimraf": "2.6.3",
    "smee-client": "1.1.0",
    "standard": "12.0.1",
    "ts-jest": "24.0.2",
    "tsconfig-paths-jest": "0.0.1",
    "tslint": "5.18.0",
    "typescript": "^3.5.3"
  },
  "engines": {
    "node": ">=10.16.0",
    "yarn": ">=1.13.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "_moduleAliases": {
    "@core": "dist/core",
    "@data": "dist/data",
    "@domain": "dist/domain",
    "@presentation": "dist/presentation"
  }
}
