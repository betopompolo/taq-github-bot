{
  "name": "taq-github-bot",
  "version": "1.0.0",
  "description": "Taqtile's Github bot",
  "author": "Taqtile",
  "license": "ISC",
  "repository": "https://github.com/taqtile/taq-github-bot.git",
  "homepage": "https://github.com/taqtile/taq-github-bot",
  "bugs": "https://github.com/taqtile/taq-github-bot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean-dist": "rimraf ./dist",
    "start": "yarn lint && yarn build && probot run ./dist/index.js",
    "lint": "tslint 'src/**/*.ts' --project ./tsconfig.json",
    "postinstall": "yarn run clean-dist && tsc && yarn run copy-resources && yarn migrate",
    "reinstall": "rimraf ./node_modules || true && yarn cache clean && yarn",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "dotenv": "6.0.0",
    "ioredis": "3.2.2",
    "lodash": "4.17.10",
    "probot": "7.0.1"
  },
  "devDependencies": {
    "@types/node": "10.5.3",
    "@types/lodash": "4.14.113",
    "@types/ioredis": "3.2.14",
    "jest": "^22.4.3",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^10.0.3",
    "typescript": "3.0.1",
    "copyfiles": "^2.0.0",
    "rimraf": "^2.6.2",
    "ts-node": "^6.0.2",
    "tsconfig-paths": "^3.3.1",
    "tslint": "5.11.0"
  },
  "engines": {
    "node": "10.7.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  }
}
