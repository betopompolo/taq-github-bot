{
  "name": "taq-github-bot",
  "version": "1.0.0",
  "description": "Taqtile's Github bot",
  "author": "Taqtile",
  "license": "ISC",
  "repository": "https://github.com/taqtile/taq-github-bot.git",
  "homepage": "https://github.com/taqtile/taq-github-bot",
  "bugs": "https://github.com/taqtile/taq-github-bot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "yarn lint && gulp",
    "clean-dist": "rimraf ./dist",
    "copy-resources": "copyup 'src/**/*.{html,jpg,jpeg,png,css,json,wsdl}' 'dist/'",
    "start": "yarn build && probot run ./dist/index.js",
    "dev": "nodemon -e ts --ignore dist/ --exec \"npm start\"",
    "lint": "tslint 'src/**/*.ts' --project ./tsconfig.json",
    "postinstall": "yarn run clean-dist && tsc && yarn run copy-resources",
    "reinstall": "rimraf ./node_modules || true && yarn cache clean && yarn",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "dotenv": "6.0.0",
    "ioredis": "3.2.2",
    "lodash": "4.17.10",
    "probot": "7.0.1",
    "typedi": "0.8.0"
  },
  "devDependencies": {
    "@types/node": "10.5.3",
    "@types/lodash": "4.14.113",
    "@types/ioredis": "3.2.14",
    "@taqtile/gulp-module-resolver": "0.2.2",
    "gulp": "3.9.1",
    "gulp-typescript": "4.0.1",
    "jest": "23.5.0",
    "tsconfig-paths": "3.5.0",
    "nodemon": "^1.17.2",
    "smee-client": "1.0.2",
    "standard": "11.0.1",
    "typescript": "3.0.1",
    "copyfiles": "2.0.0",
    "rimraf": "2.6.2",
    "tslint": "5.11.0"
  },
  "engines": {
    "node": "10.7.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  }
}
